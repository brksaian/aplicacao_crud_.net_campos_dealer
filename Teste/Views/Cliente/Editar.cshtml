@{
    ViewData["Title"] = "Edição de Cliente";
}

<div class="">
    <h1 class="display-5">Editar cliente</h1>
    <form class="justify-content-md-start">
        <div class="mb-3">
            <label for="client-name" class="form-label">Nome</label>
            <input type="text" class="form-control" id="client-name" placeholder="Digite seu nome completo">
        </div>
        <div class="mb-3">
            <label for="client-city" class="form-label">Cidade</label>
            <input type="text" class="form-control" id="client-city" placeholder="Digite o nome da cidade do cliente">
        </div>
        <button type="submit" class="btn btn-primary">Editar</button>
        <button class="btn btn-secondary" asp-controller="Cliente" asp-action="Index" role="button">Cancelar</button>
    </form>
</div>