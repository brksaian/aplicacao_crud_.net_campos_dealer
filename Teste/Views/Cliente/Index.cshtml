@{
    ViewData["Title"] = "Listagem de Clientes";
}

<div class="text-center">

    <h1 class="display-5">Clientes</h1>

    <div class="d-grid gap-2 d-md-flex justify-content-md-start pb-2">
        <a class="btn btn-primary" role="button" asp-controller="Cliente" asp-action="Criar">Novo Cliente</a>
    </div>

    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Cidade</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">1</th>
                <td>Mark</td>
                <td>Otto</td>
                <td>
                    <div class="btn-group" role="group">
                        <a type="button" class="btn btn-primary" asp-controller="Cliente" asp-action="Editar">Editar</a>
                        <a type="button" class="btn btn-danger" asp-controller="Cliente" asp-action="ApagarConfirmacao">Apagar</a>
                    </div>
                </td>
            </tr>
            <tr>
                <th scope="row">2</th>
                <td>Jacob</td>
                <td>Thornton</td>
                <td>
                    <div class="btn-group" role="group">
                        <a type="button" class="btn btn-primary" asp-controller="Cliente" asp-action="Editar">Editar</a>
                        <a type="button" class="btn btn-danger" asp-controller="Cliente" asp-action="ApagarConfirmacao">Apagar</a>
                    </div>
                </td>
            </tr>
            <tr>
                <th scope="row">3</th>
                <td colspan="2">Larry the Bird</td>
                <td>
                    <div class="btn-group" role="group">
                        <a type="button" class="btn btn-primary" asp-controller="Cliente" asp-action="Editar">Editar</a>
                        <a type="button" class="btn btn-danger" asp-controller="Cliente" asp-action="ApagarConfirmacao">Apagar</a>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
</div>
